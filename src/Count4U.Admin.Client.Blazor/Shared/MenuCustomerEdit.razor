    <div class="row px-0">
        <button class="btn btn-lg profile-menu-inbutton" @onclick="()=>NavigateToProfileEdit(customerCode, email)">Edit Profile</button>
        <div class="profile-menu-line-border row"></div>
    </div>
    <div class="row px-0">
        <button class="btn btn-lg profile-menu-inbutton" @onclick="()=>NavigateToOldProfileEdit(customerCode)">Old</button>
        <div class="profile-menu-line-border row"></div>
    </div>
    <div class="row px-0">
        <button class="btn btn-lg profile-menu-inbutton" @onclick="()=>NavigateToProfileShow(customerCode)">Test</button>
    </div>

    @if (IsShowCustomer)
    {
<div class="row px-0">
    <div class="profile-menu-line-border row"></div>
    <button class="btn btn-lg profile-menu-inbutton" @onclick="()=>NavigateToCustomerGrid(customerCode)">Customers</button>
</div>
        @*<li>
                <span @onclick="()=>NavigateToCustomerGrid(customerCode)">Customers</span>
            </li>*@
    }
