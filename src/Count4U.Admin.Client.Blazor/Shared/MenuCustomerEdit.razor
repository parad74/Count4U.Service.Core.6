            <span @onclick="()=>NavigateToUsersGrid(customerCode)">Users</span>-->
        @*<a href="/usergrid/@customerCode" class="p-2 m-2" style="color:green">Users</a>*@
        <!--</li>-->
    }

</profile-menu>


@code{
    [Parameter]
    public string email { get; set; }

    [Parameter]
    public string customerCode { get; set; }

    [Parameter]
    public bool IsShowCustomer { get; set; } = true;

    //[Parameter]
    //public bool IsShowRole { get; set; } = true;

    [Parameter]
    public bool IsShowUsers { get; set; } = true;


    [Inject]
    protected NavigationManager _navigationManager { get; set; }


    public async Task NavigateToProfileEdit(string _customerCode, string _email)
    {

        this._navigationManager.NavigateTo(@"/objectprofilexmlfileedit/" + _customerCode + @"/" + _email);
    }

    public async Task NavigateToOldProfileEdit(string _customerCode)
    {

        this._navigationManager.NavigateTo(@"/objectprofilefileedit/" + _customerCode);
    }

    public async Task NavigateToProfileShow(string _customerCode)
    {

        this._navigationManager.NavigateTo(@"/objectprofilefileshow/" + _customerCode);
    }


    public async Task NavigateToUsersGrid(string _customerCode)
    {

        this._navigationManager.NavigateTo(@"/usergrid/" + _customerCode);
    }


    public async Task NavigateToCustomerGrid(string _customerCode)
    {
        this._navigationManager.NavigateTo(@"/customergrid/" + _customerCode);
    }


}
